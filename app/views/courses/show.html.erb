<div class="row">
  <div class="col m4">
    <div class="card z-depth-2">
      <div class="center">
        <h1><%= number_to_currency(@course.price) %></h1>
      </div>
      <div class="card-action center">
        <button class="btn waves-effect waves-light green darken-3">
          Take this
        </button>
      </div>
    </div>
  </div>
  <div class="col m8">
    <div class="card z-depth-2">
      <div class="card-image waves-effect waves-block waves-light">
        <%= @course.image.present? ? image_tag(@course.image.url, height: 200, width: 200) : content_tag(:span, 'No Image')
        %>
      </div>
    </div>
    <div class="card-content green-text text-darken-4">
      <h4><%= @course.title %></h4>
      <hr>
      <h4><%= @course.description %></h4>

      <div class="collection">

        <% @taks.each do |task| %>
            <%= link_to [@course, task], class: "collection-item" do %>
                <%= task.title %>
            <% end %>
        <% end %>
    </div>
  </div>
</div>
</div>

